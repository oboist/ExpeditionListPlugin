                          <DataTemplate>
                            <Grid>
                              <TextBlock FontSize="12" Text="{Binding AlterationMaterials, Mode=OneWay}" HorizontalAlignment="Center" Padding="0,0,0,0" Margin="0,0,0,0"/>
